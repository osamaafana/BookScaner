# BookScanner Production Environment Configuration
# Copy this file to .env and fill in your actual values

# App Configuration
APP_ENV=production
API_BASE_URL=http://your-server-ip
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Database Configuration (Neon Database)
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require&channel_binding=require

# Redis Configuration (Upstash Redis)
REDIS_URL=redis://default:token@host.upstash.io:6379

# API Keys - REQUIRED
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLEBOOKS_API_KEY=your_google_books_api_key_here
NVIDIA_API_KEY=your_nvidia_api_key_here

# Security - CHANGE THESE!
ADMIN_TOKEN=generate_secure_random_token_here
JWT_SECRET=generate_secure_random_secret_here

# CORS Configuration
CORS_ORIGINS=http://your-frontend-domain.com,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_PER_DEVICE_HOURLY=10
RATE_LIMIT_PER_DEVICE_DAILY=30
RATE_LIMIT_PER_IP_PER_MIN=20
RATE_LIMIT_PER_IP_DAILY=200

# Image Processing
MAX_UPLOAD_MB=10
MAX_IMAGE_DIMENSION=4096
MIN_IMAGE_DIMENSION=100

# AI Model Configuration
GROQ_VISION_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
OLLAMA_RECS_MODEL=llama-3.1-8b-instant
NVIDIA_MODEL_NAME=meta/llama-3.1-70b-instruct

# Cost Management
GROQ_MONTHLY_CAP_USD=10.0
GROQ_ENABLED=true
OPENLIBRARY_ENABLED=true

# Cache TTL
METADATA_TTL_SECS=432000
