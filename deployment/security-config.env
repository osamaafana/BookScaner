# Security Configuration for BookScanner
# Copy this to .env and update with your secure values

# Database Security
PG_USER=bookscanner_app
PG_PASSWORD=secure_app_password_here
PG_MIGRATION_USER=bookscanner_migration
PG_MIGRATION_PASSWORD=secure_migration_password_here
PG_BACKUP_USER=bookscanner_backup
PG_BACKUP_PASSWORD=secure_backup_password_here

# Application Security
ADMIN_TOKEN=your_secure_admin_token_here
JWT_SECRET=your_secure_jwt_secret_here

# CORS Security (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Device-Id,X-Requested-With

# Upload Security
MAX_UPLOAD_MB=10
MAX_IMAGE_DIMENSION=4096
MIN_IMAGE_DIMENSION=100

# Rate Limiting
RATE_LIMIT_PER_DEVICE_HOURLY=10
RATE_LIMIT_PER_DEVICE_DAILY=30
RATE_LIMIT_PER_IP_PER_MIN=20
RATE_LIMIT_PER_IP_DAILY=200

# Backup Security
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
RETENTION_DAYS=30

# API Keys (keep these secure)
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
NVIDIA_API_KEY=your_nvidia_api_key_here

# Environment
APP_ENV=production
LOG_LEVEL=INFO
SECURE_COOKIES=true

# Monitoring
METRICS_ENABLED=true
ALERT_WEBHOOK_URL=your_webhook_url_here
